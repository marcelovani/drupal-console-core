{{ environment }}:
  name: {{ name }}
  type: {{ type }}
  root: {{ root }}
  server-root: {{ server_root }}
{% if host %}
  host: {{ host }}
{% endif %}
{% if type == 'container' or type == 'ssh' %}
  {{ type }}:
  {% if port %}
  port: {{ port }}
  {% endif %}
{% if user %}
  user: {{ user }}
{% endif %}
{% endif %}
{% if uri %}
  options:
    uri: {{ uri }}
{% else %}
#  options:
{% endif %}
#  arguments:
{% if extra_options %}
  extra-options: '{{ extra_options }}'
{% endif %}
