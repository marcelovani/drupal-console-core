{{ environment }}:
  type: {{ type }}
  name: {{ name }}
  root: {{ root }}
  server-root: {{ server_root }}
{% if host %}
  host: {{ host }}
{% endif %}
{% if account_name %}
  account-name: {{ account_name }}
{% endif %}
{% if account_pass %}
  account-pass: {{ account_pass }}
{% endif %}
{% if account_mail %}
  account-mail: {{ account_mail }}
{% endif %}
{% if port and user %}
  ssh:
    port: {{ port }}
    user: {{ user }}
{% endif %}
{% if repo_type and repo_url and repo_branch %}
  repo:
    type: {{ repo_type }}
    url: {{ repo_url }}
    branch: {{ repo_branch }}
{% endif %}
{% if uri %}
  options:
    uri: {{ uri }}
{% else %}
#  options:
{% endif %}
{% if extra_options %}
  extra-options: '{{ extra_options }}'
{% endif %}
