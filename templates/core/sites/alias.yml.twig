# Site
{{ environment }}:
  type: {{ type }}
  name: {{ name }}
  root: {{ root }}
  server-root: {{ server_root }}
{% if web_host %}
  web-host: {{ web_host }}
  web-port: {{ web_port }}
{% endif %}

{% if account_name %}
# Account
  account-name: {{ account_name }}
{% endif %}
{% if account_pass %}
  account-pass: {{ account_pass }}
{% endif %}
{% if account_mail %}
  account-mail: {{ account_mail }}
{% endif %}

{% if host and port %}
# Remote
  ssh:
    host: {{ host }}
    port: {{ port }}
    user: {{ user }}
{% endif %}

{% if repo_type and repo_url and repo_branch %}
# Repository
  repo:
    type: {{ repo_type }}
    url: {{ repo_url }}
    branch: {{ repo_branch }}
{% endif %}

{% if db_driver and db_host and db_port and db_user %}
# Database
  db:
    driver: {{ db_driver }}
    host: {{ db_host }}
    port: {{ db_port }}
    name: {{ db_name }}
    user: {{ db_user }}
    {% if db_pass %} pass: {{ db_pass }} {% endif %}
    {% if db_dump %} dump: {{ db_dump }} {% endif %}
{% endif %}

{% if uri %}
# Options
  options:
    uri: {{ uri }}
{% endif %}
{% if extra_options %}
  extra-options: '{{ extra_options }}'
{% endif %}
