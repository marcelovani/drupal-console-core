{{ environment }}:
  name: {{ name }}
  type: {{ type }}
  root: {{ root }}
  server-root: {{ server_root }}
{% if host %}
  host: {{ host }}
{% endif %}
{% if account_name %}
  account-name: {{ account_name }}
{% endif %}
{% if account_pass %}
  account-pass: {{ account_pass }}
{% endif %}
{% if account_mail %}
  account-mail: {{ account_mail }}
{% endif %}
{% if port and user %}
  {{ type }}:
  {% if port %}
  port: {{ port }}
  {% endif %}
{% if user %}
  user: {{ user }}
{% endif %}
{% endif %}
{% if uri %}
  options:
    uri: {{ uri }}
{% else %}
#  options:
{% endif %}
#  arguments:
{% if extra_options %}
  extra-options: '{{ extra_options }}'
{% endif %}
